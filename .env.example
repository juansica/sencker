# ===========================================
# PJUD Web Scraper - Environment Configuration
# ===========================================
# Copia este archivo como .env y configura tus valores

# --- Configuración del Navegador ---
# true = Sin ventana visible (producción), false = Con ventana (debugging)
HEADLESS_MODE=true

# Timeout general para operaciones de Playwright (en segundos)
TIMEOUT_SECONDS=60

# Tiempo de espera entre acciones para simular comportamiento humano (ms)
SLOW_MO_MS=100

# --- Configuración de Viewport ---
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# --- Configuración de Reintentos ---
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5

# --- Configuración de Captcha (Opcional) ---
# API Key para servicios de resolución de captcha (ej. 2captcha, anti-captcha)
CAPTCHA_API_KEY=your_captcha_api_key_here
CAPTCHA_SERVICE=2captcha

# --- URLs del PJUD ---
PJUD_BASE_URL=https://oficinajudicialvirtual.pjud.cl
PJUD_CIVIL_URL=https://oficinajudicialvirtual.pjud.cl/indexN.php

# --- Configuración de Logging ---
LOG_LEVEL=INFO
LOG_TO_FILE=true

# --- Configuración de Proxy (Opcional) ---
# PROXY_SERVER=http://your-proxy:port
# PROXY_USERNAME=
# PROXY_PASSWORD=

# --- Configuración de Output ---
OUTPUT_FORMAT=json
# Opciones: json, csv, both
